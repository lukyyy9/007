{
  "name": "tactical-card-game-server",
  "version": "1.0.0",
  "description": "Server for tactical card game",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "node src/scripts/init-db.js",
    "db:migrate": "node src/scripts/run-migrations.js up",
    "db:rollback": "node src/scripts/run-migrations.js down",
    "db:seed": "node src/scripts/seed-cards.js",
    "db:test": "node src/scripts/test-db-connection.js",
    "db:validate": "node src/scripts/validate-models.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "keywords": [
    "express",
    "socket.io",
    "postgresql",
    "sequelize"
  ],
  "author": "",
  "license": "MIT"
}