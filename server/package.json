{
  "name": "tactical-card-game-server",
  "version": "1.0.0",
  "description": "Server for tactical card game",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",

    "test:coverage": "jest --coverage",
    "test:setup": "node test-setup.js",
    "db:init": "node src/scripts/init-db.js",
    "db:migrate": "node src/scripts/run-migrations.js up",
    "db:rollback": "node src/scripts/run-migrations.js down",
    "db:seed": "node src/scripts/seed-cards.js",
    "db:test": "node src/scripts/test-db-connection.js",
    "db:validate": "node src/scripts/validate-models.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "@testcontainers/postgresql": "^10.13.2",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 60000,
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__tests__/**",
      "!src/scripts/**",
      "!src/config/**"
    ]
  },
  "keywords": [
    "express",
    "socket.io",
    "postgresql",
    "sequelize"
  ],
  "author": "",
  "license": "MIT"
}
